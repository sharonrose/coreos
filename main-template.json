{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "coreuser"
        },
        "adminPassword": {
            "type": "string",
            "defaultValue": "TestDriveUser123"
        },
        "location": {
            "type": "string",
            "defaultValue": "westus",
            "allowedValues": [
                "Brazil South",
                "brazilsouth",
                "East Asia",
                "eastasia",
                "East US",
                "eastus",
                "Japan East",
                "japaneast",
                "Japan West",
                "japanwest",
                "North Central US",
                "northcentralus",
                "North Europe",
                "northeurope",
                "South Central US",
                "southcentralus",
                "West Europe",
                "westeurope",
                "West US",
                "westus",
                "Southeast Asia",
                "southeastasia",
                "Central US",
                "centralus",
                "East US 2",
                "eastus2"
            ],
            "metadata": {
                "description": "Deployment Location Hint: Use lowercase for creating ipaddress"
            }
        },
        "nodeCount": {
            "type": "int",
            "defaultValue": 3
        }
    },
    "variables": {
        "suffix": "[substring(uniqueString(resourceGroup().id), 0, 5)]",
        "clusterPrefix": "coreos",
        "computeApiVersion": "2016-03-30",
        "networkApiVersion": "2016-06-01",
        "StorageApiVersion": "2016-01-01",
        "publicIPdnsPrefix": "[concat(variables('clusterPrefix'),'dns',variables('suffix'))]",
        "avsetName": "[concat(variables('clusterPrefix'),'-avset')]",
        "pipName": "[concat(variables('clusterPrefix'),'-pip')]",
        "nicName": "[concat(variables('clusterPrefix'),'-nic')]",
        "lbName": "[concat(variables('clusterPrefix'),'-lb')]",
        "storageAccName": "[concat(variables('clusterPrefix'),'sa',variables('suffix'))]",
        "vmName": "[concat(variables('clusterPrefix'),'-vm')]",
        "vmStorageAccountContainerName": "[concat(variables('clusterPrefix'),'cont',variables('suffix'))]",
        "storageAccountType": "Standard_LRS",
        "vnetName": "[concat(variables('clusterPrefix'),'-vnet')]",
        "vnetAddressPrefix": "10.7.0.0/16",
        "subnet1Name": "subnet1",
        "subnet1Prefix": "10.7.0.0/24",
        "vmSize": "",
        "imagePublisher": "",
        "imageOffer": "",
        "imageSKU": "",
        "imageVersion": "",
        "baseUrl": "https://raw.githubusercontent.com/sharonrose/coreos/master",
        "avsetDeployUrl": "[concat(variables('baseUrl'),'/nested/availability-set.json')]",
        "publicipDeployUrl": "[concat(variables('baseUrl'),'/nested/public-ip.json')]",
        "storageDeployUrl": "[concat(variables('baseUrl'),'/nested/storage.json')]",
        "nicwithloadbalncerDeployUrl": "[concat(variables('baseUrl'),'/nic-with-loadbalancer.json')]",
        "vnetsubnetDeployUrl": "[concat(variables('baseUrl'),'/nested/vnet-subnet.json')]",
        "vmDeployUrl": "[concat(variables('baseUrl'),'/nested/vm-withavset.json')]",
        "lbDeployUrl": "[concat(variables('baseUrl'),'/nested/loadbalancer.json')]"
    },
    "resources": [
        {
            "name": "avsetDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('avsetDeployUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "availabilitySetName": {
                        "value": "[variables('avsetName')]"
                    },
                    "availabilitySetApiVersion": {
                        "value": "[variables('computeApiVersion')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "name": "publicipDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('publicipDeployUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkApiVersion": {
                        "value": "[variables('networkApiVersion')]"
                    },
                    "publicIPAddressName": {
                        "value": "[variables('pipName')]"
                    },
                    "publicIPdnsPrefix": {
                        "value": "[variables('publicIPdnsPrefix')]"
                    }
                }
            }
        },
        {
            "name": "storageDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageDeployUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccName')]"
                    },
                    "storageApiVersion": {
                        "value": "[variables('StorageApiVersion')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "storageAccountType": {
                        "value": "[variables('storageAccountType')]"
                    }
                }
            }
        },
        {
            "name": "vnetsubnetDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetsubnetDeployUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkApiVersion": {
                        "value": "[variables('networkApiVersion')]"
                    },
                    "vnetName": {
                        "value": "[variables('vnetName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "vnetAddressPrefix": {
                        "value": "[variables('vnetAddressPrefix')]"
                    },
                    "subnet1Name": {
                        "value": "[variables('subnet1Name')]"
                    },
                    "subnet1Prefix": {
                        "value": "[variables('subnet1Prefix')]"
                    }
                }
            }
        },
        {
            "name": "lbDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "dependsOn": [
                "publicipDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('lbDeployUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "loadBalancerName": {
                        "value": "[variables('lbName')]"
                    },
                    "loadBalancersApiVersion": {
                        "value": "[variables('networkApiVersion')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "publicIPAddressName": {
                        "value": "[variables('pipName')]"
                    },
                    "nodeCount": {
                        "value": "[parameters('nodeCount')]"
                    }
                }
            }
        },
        {
            "name": "nicwithloadbalncerDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "dependsOn": [
                "vnetsubnetDeploy",
                "lbDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nicwithloadbalncerDeployUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkApiVersion": {
                        "value": "[variables('networkApiVersion')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('nicName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "loadBalancerBkpoolRef": {
                        "value": ""
                    },
                    "loadBalancerInboundNatRef": {
                        "value": ""
                    },
                    "subnetRef": {
                        "value": ""
                    }
                }
            }
        },
        {
            "name": "vmDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "dependsOn": [
                "storageDeploy",
                "nicwithloadbalncerDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmDeployUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "computeApiVersion": {
                        "value": "[variables('computeApiVersion')]"
                    },
                    "vmName": {
                        "value": "[variables('vmName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "imagePublisher": {
                        "value": "[variables('imagePublisher')]"
                    },
                    "imageOffer": {
                        "value": "[variables('imageOffer')]"
                    },
                    "imageSKU": {
                        "value": "[variables('imageSKU')]"
                    },
                    "imageVersion": {
                        "value": "[variables('imageVersion')]"
                    },
                    "storageAccountName": {
                        "value": "[variables('storageAccName')]"
                    },
                    "vmStorageAccountContainerName": {
                        "value": "[variables('vmStorageAccountContainerName')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('nicName')]"
                    },
                    "availabilitySetName": {
                        "value": "[variables('avsetName')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}